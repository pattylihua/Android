<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
    android:id="@+id/LargeFont"
    android:defaultValue="false"
    android:key="LargeFontKey"
    android:summaryOff="Normal"
    android:summaryOn="Large"
    android:title="Large Font" />
    <CheckBoxPreference
        android:id="@+id/NightMode"
        android:defaultValue="false"
        android:key="NightModeKey"
        android:summaryOff="Day"
        android:summaryOn="Night"
        android:title="Night Mode" />
    <CheckBoxPreference
        android:id="@+id/FastPlan"
        android:defaultValue="false"
        android:key="FastPlanKey"
        android:summaryOff="Normal"
        android:summaryOn="Fast"
        android:title="Fast Plan" />
</PreferenceScreen>